{
  "swagger": "2.0",
  "info": {
    "title": "SNMP-ZTE API",
    "description": "Multi-OLT SNMP monitoring system for ZTE devices (C320, C300, C600)",
    "version": "2.1.0",
    "contact": {
      "name": "ardani17",
      "email": "adifta22@gmail.com"
    },
    "license": {
      "name": "MIT"
    }
  },
  "host": "localhost:8080",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/api/v1/query": {
      "post": {
        "summary": "Stateless SNMP Query",
        "description": "Query OLT data without storing credentials",
        "tags": ["Query"],
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["ip", "community", "query"],
              "properties": {
                "ip": {"type": "string", "example": "192.168.1.1"},
                "port": {"type": "integer", "example": 161},
                "community": {"type": "string", "example": "public"},
                "model": {"type": "string", "example": "C320"},
                "query": {"type": "string", "example": "onu_list"},
                "board": {"type": "integer", "example": 1},
                "pon": {"type": "integer", "example": 1},
                "onu_id": {"type": "integer", "example": 1}
              }
            }
          }
        ],
        "responses": {
          "200": {"description": "OK"},
          "400": {"description": "Bad Request"},
          "500": {"description": "Internal Server Error"}
        }
      }
    },
    "/api/v1/olt-info": {
      "post": {
        "summary": "Get OLT Info",
        "description": "Get OLT system information",
        "tags": ["Query"],
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "responses": {
          "200": {"description": "OK"}
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Health Check",
        "description": "Health check endpoint",
        "tags": ["System"],
        "produces": ["application/json"],
        "responses": {
          "200": {"description": "OK"}
        }
      }
    },
    "/stats": {
      "get": {
        "summary": "Pool Statistics",
        "description": "Get SNMP connection pool statistics",
        "tags": ["System"],
        "produces": ["application/json"],
        "responses": {
          "200": {"description": "OK"}
        }
      }
    }
  }
}
